<h1>Approved Orders</h1>


<table>
  <thead>
    <tr>
      <th bgcolor="#A9F5F2">Ref number</th>
      <th bgcolor="#A9F5F2">Duedate</th>
      <th bgcolor="#A9F5F2">Expected</th>
      <th bgcolor="#A9F5F2">Total amount</th>
      <th bgcolor="#A9F5F2">Buyer</th>
      <th bgcolor="#A9F5F2">Approved Date</th>
      <th bgcolor="#A9F5F2">Approved By</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr class="<%= cycle("even", "odd") %>">
        <td><%= order.ref_number %></td>
        <td><%= order.date_due %></td>
        <td><%= order.expected_date %></td>
        <td><%= order.total_amount %></td>
        <td><%= order.custom_field_authorized_buyer %></td>
		<td><%= order.approve_date %></td>
		<td><%= order.approve_by %></td>
		<td><%= link_to 'Received', edit_order_path(order),:confirm => 'Are you sure?' if order.custom_field_authorized_buyer == @current_user.buyer %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', orders_path %>