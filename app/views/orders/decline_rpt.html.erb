<h1>Decline orders</h1>
	
<table>
  <thead>
    <tr>
      <th bgcolor="#A9F5F2">Ref number</th>
      <th bgcolor="#A9F5F2">Duedate</th>
      <th bgcolor="#A9F5F2">Expected</th>
      <th bgcolor="#A9F5F2">Total amount</th>
      <th bgcolor="#A9F5F2">Buyer</th>
      <th bgcolor="#A9F5F2">Decline Date</th>
      <th bgcolor="#A9F5F2">Declined By</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr class="<%= cycle("even", "odd") %>">
        <td><%= order.ref_number %></td>
        <td><%= order.duedate %></td>
        <td><%= order.expected_date %></td>
        <td><%= order.total_amount %></td>
        <td><%= order.custom_field_authorized_buyer %></td>
		<td><%= order.decline_date %></td>
		<td><%= order.decline_by %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', orders_path %>