<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>WetDesign</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<%= stylesheet_link_tag    "casting", media: "all", "data-turbolinks-track" => true %>
<link rel="icon" href="images/icon.ico" />
</head>
<body>
<div id="headerbg">
  <div id="headerblank">
    <div id="header">
      <div id="menu">
        <ul>
          <li><a href="<%= log_out_path %>" class="menu">Logout</a></li>
          <li><a href="<%= approved_orders_path %>" class="menu">Approved</a></li>
          <li><a href="<%= received_orders_path %>" class="menu">Received</a></li>
          <li><a href="<%= decline_rpt_orders_path %>" class="menu">Declined</a></li>
          <li><a href="<%=  searchz_orders_path %>" class="menu">Search</a></li>
        </ul>  		  
      </div>
      </div>
    </div>
  </div>
</div>
<div id="contentbg">
  <div id="contentblank">
    <div id="content">
      <div id="contentleft">
        <div id="leftheading">
          <h4>Menu</h4>
        </div>
        <div class="lefttxtblank">
          <div class="lefticon">16</div>
          <div class="leftboldtxtblank">
            <div class="leftboldtxt"><%= link_to 'Logout', log_out_path %></div>
            <div class="lefttxt">Wednesday August 6 2014</div>
          </div>
          <div class="leftnormaltxt">Logs you completely out of application</div>
        </div>
        <div class="lefttxtblank02">
          <div class="lefticon">16</div>
          <div class="leftboldtxtblank">
            <div class="leftboldtxt"><%= link_to 'Approved', approved_orders_path %></div>
            <div class="lefttxt">Wednesday August 6 2014</div>
          </div>
          <div class="leftnormaltxt">View Approved Item and Receive Items</div>
        </div>
        <div class="lefttxtblank02">
          <div class="lefticon">16</div>
          <div class="leftboldtxtblank">
            <div class="leftboldtxt"><%= link_to 'Received', received_orders_path %></div>
            <div class="lefttxt">Wednesday August 6 2014</div>
          </div>
          <div class="leftnormaltxt">View Items that have been received</div>
        </div>
        <div class="lefttxtblank02">
          <div class="lefticon">16</div>
          <div class="leftboldtxtblank">
            <div class="leftboldtxt"><%= link_to 'Declined', decline_rpt_orders_path %></div>
            <div class="lefttxt">Wednesday August 6 2014</div>
          </div>
          <div class="leftnormaltxt">View Items that have been declined</div>
        </div>
        <div class="lefttxtblank02">
          <div class="lefticon">16</div>
          <div class="leftboldtxtblank">
            <div class="leftboldtxt"><%= link_to 'Search', searchz_orders_path %></div>
            <div class="lefttxt">Wednesday August 6 2014</div>
          </div>
          <div class="leftnormaltxt">Search Purchase Orders</div>
        </div>
        <div id="leftnav">
        </div>
      </div>
      <div id="contentmid">
        <div class="midheading">
          <h2>Purchase Orders</h2>
        </div>
		<br />
		<table>
		    <tr style="font-size:12px" >
			  <td><b>Vendor :</b></td>
			  <td> <%= @str_get_ref_id.vendor_name %></td>
			 </tr> 
 		    <tr style="font-size:12px" >
 			  <td><b>Address :</b></td>
 			  <td> <%= @str_get_ref_id.address %></td>
 			 </tr>
  		    <tr style="font-size:12px" >
  			  <td><b>City :</b></td>
  			  <td> <%= @str_get_ref_id.city %></td>
  			 </tr>
   		    <tr style="font-size:12px" >
   			  <td><b>Phone :</b></td>
   			  <td></td>
   			 </tr>
    		    <tr style="font-size:12px" >
    			  <td><b>Contact :</b></td>
    			  <td></td>
    			 </tr>
		</table>
        <br />
		<table>
		    <tr style="font-size:12px" >
			  <td><b>Payment Terms :</b></td>
			  <td> <%= @str_get_ref_id.terms %></td>
			  <td><b>Date Required :</b></td>
			  <td> <%= @str_get_ref_id.date_due %></td>
			  <td><b>Date Promised :</b></td>
			  <td> <%= @str_get_ref_id.expected_date %></td>
			 </tr>
 		    <tr style="font-size:12px" >
 			  <td><b>Status :</b></td>
 			  <td> <%= @str_get_ref_id.po_status  %></td>
 			  <td><b>PO Number:</b></td>
 			  <td> <%= @str_get_ref_id.ref_number %></td>
 			  <td><b>Approved :</b></td>
 			  <td> <%= @str_get_ref_id.track %></td>
 			 </tr>
		</table>
		

		<table>
		    <tr style="font-size:12px" >
			  <th>Buyer</th>
			 </tr> 
			 <tbody>
				 <tr style="font-size:12px" >
				 <td colspan = "4"><%= @str_get_ref_id.custom_field_authorized_buyer %></td>
			     </tr>
			 </tbody>	 
		</table>
		
		<br />
		<table>
		    <tr style="font-size:12px" >
			  <th bgcolor="#000000"><font color="#FFFFFF">MEMO</font></th>
		 	  <th bgcolor="#000000"><font color="#FFFFFF">VENDOR MSG</font></th>
			  <th bgcolor="#000000"><font color="#FFFFFF">DECLINE REASON</font></th>
		 	 </tr>
			 <tbody>
				 <tr style="font-size:12px" >
				 <td><%= text_area_tag :message_memo,@str_get_ref_id.memo, :size =>"25x10" %></td>
		 		 <td><%= text_area_tag :message_memo,@str_get_ref_id.user_comments, :size =>"25x10" %></td>
				 <td><%= text_area_tag :message_body,@str_get_ref_id.decliner_comments, :size =>"25x10" %></td>
			     </tr>
		 	 </tbody>
		<table>
			<br />
		<table>
			<tr>
				<%#= form_tag import_orders_path, multipart: true do %>
				<%#= file_field_tag :file %>
			   <p> <%#= text_field_tag "subject" %></p>
			   <%#= submit_tag "Import CSV" %>
			 <%# end %>	
	 
			</tr>
		</table>	
		
		<table>
		  <thead>
		    <tr style="font-size:12px" >
			  <th bgcolor="#000000"><font color="#FFFFFF">ITEM</font></th>	
			  <th bgcolor="#000000"><font color="#FFFFFF">MPN</font></th>
			  <th bgcolor="#000000"><font color="#FFFFFF">WC</font></th>
			  <th bgcolor="#000000"><font color="#FFFFFF">DESCRIPTION</font></th>
			  <th bgcolor="#000000"><font color="#FFFFFF">PROJECTID</font></th>
			  <th bgcolor="#000000"><font color="#FFFFFF">PRODUCT</font></th>
			  <th bgcolor="#000000"><font color="#FFFFFF">ClASS</font></th>
			  <th bgcolor="#000000"><font color="#FFFFFF">QTY</font></th>
			  <th bgcolor="#000000"><font color="#FFFFFF">LEAD</font></th>
			  <th bgcolor="#000000"><font color="#FFFFFF">AMT</font></th>
		      <th></th>
		    </tr>
		  </thead>

  <tbody>
    <% @orderln.each do |order| %>
      <tr style="font-size:12px", class="<%= cycle("even", "odd") %>">
	    <td><%= order.item %></td> 	  
		<td><%= order.mpn %></td> 
		<td><%= order.wc %></td> 
		<td><%= order.ord_line_desc %></td>
		<td><%= order.project_id %></td>
		<td><%= order.product %></td>
		<td><%= order.classz %></td>
		<td><%= order.ord_line_qty %></td>
		<td><%= order.lead_time %></td>  
		<td><%= order.ord_line_amount %></td>
      </tr>
    <% end %>
  </tbody>
		</table>
		<br />
		<table>
			<tr style="font-size:12px" >
			 <%if @current_user.amount.to_f > 0 %>	
			 <td> Approve</td>	
			 <td><%= link_to image_tag("approved_icon.png"), edit_order_path(params[:id]) %></td>

			 <td> Decline</td>	
			 <td><%= link_to image_tag("dissapproved_icon.png"), decline_orders_path(:id => params[:id]) %> </td>
		     <% end %>
			 <%if @current_user.amount.to_f == 0 %>	
			  <td> Recommit</td>	
			  <td><%= link_to image_tag("dissapproved_icon.png"), undecline_orders_path(:id => params[:id]) %> </td>
			 <% end %>
			 <td> Return</td>	
			 <td><%= link_to image_tag("backward_icon.png"), orders_path %></td>
			</tr>
		</table>
      <div id="contentright">
        </div>
      </div>
    </div>
  </div>
</div>
</body>
</html>
